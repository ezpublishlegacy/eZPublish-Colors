		</context>


		<context id="block">
			<start>{</start>
			<end>}</end>
			<include>
				<context ref="variables" />
				<context ref="strings" />
				<context ref="controls" />
				<context ref="functions" />
				<context ref="operators" />
			</include>
		</context>


		<context id="etl">
			<include>
				<context ref="comment" />
				<context ref="block" />
				<context ref="html:html" />
			</include>
		</context>
	</definitions>
</language>
